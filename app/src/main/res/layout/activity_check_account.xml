<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/query_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:id="@+id/ll_segment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/seg_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="安卓"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="3dp"
            android:textSize="16sp"
            android:background="@drawable/seg_left"
            android:textColor="@drawable/seg_text_color_selector"
            />
        <TextView
            android:id="@+id/seg_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="IOS"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="3dp"
            android:textSize="16sp"
            android:background="@drawable/seg_right"
            android:textColor="@drawable/seg_text_color_selector"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/color22_blue2"
            android:gravity="center"
            android:text="区服"
            android:textColor="@color/color11_red" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/color22_blue2"
            android:gravity="center"
            android:text="编号"
            android:textColor="@color/color11_red" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/color22_blue2"
            android:gravity="center"
            android:text="欧证"
            android:textColor="@color/color11_red" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="@color/color22_blue2"
            android:gravity="center"
            android:text="价格"
            android:textColor="@color/color11_red" />
    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/account_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"></com.handmark.pulltorefresh.library.PullToRefreshListView>
</LinearLayout>