<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/seg_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="安卓"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="3dp"
            android:textSize="16sp"
            android:background="@drawable/seg_left"
            android:textColor="@drawable/seg_text_color_selector"
            />
        <TextView
            android:id="@+id/seg_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="IOS"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingBottom="3dp"
            android:textSize="16sp"
            android:background="@drawable/seg_right"
            android:textColor="@drawable/seg_text_color_selector"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banner4"
            android:scaleType="fitXY"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.8">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color1_white"
            android:orientation="vertical"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5">

                <CheckBox
                    android:id="@+id/bb1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="密苏里"
                    android:textColor="@color/color11_red" />

                <CheckBox
                    android:id="@+id/bb2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="狮"
                    android:textColor="@color/color11_red" />

                <CheckBox
                    android:id="@+id/bb3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="俾斯麦"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/bb4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="提尔比茨"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/bb5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="华盛顿"
                    android:textColor="@color/color26_yellow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5">

                <CheckBox
                    android:id="@+id/bb6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="南达科他"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/bb7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="北卡罗莱纳"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/bb8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="前卫"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/bb9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="黎塞留"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/bb10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="安德烈·亚多利亚"
                    android:textColor="@color/color26_yellow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5">

                <CheckBox
                    android:id="@+id/bb11"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="维内托"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/av1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="大凤"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/cv1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="企业"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/cv2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="赤城"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/cv3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="加贺"
                    android:textColor="@color/color26_yellow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5">

                <CheckBox
                    android:id="@+id/cv4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="埃塞克斯"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/cv5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="翔鹤"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/cv6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="瑞鹤"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/ss1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="大青花鱼"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/ss2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="射水鱼"
                    android:textColor="@color/color26_yellow" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="5">

                <CheckBox
                    android:id="@+id/cv7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="皇家方舟"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/cv8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="大黄蜂"
                    android:textColor="@color/color25_pink" />

                <CheckBox
                    android:id="@+id/cv9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="约克城"
                    android:textColor="@color/color25_pink" />

                <CheckBox
                    android:id="@+id/cl1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="大淀"
                    android:textColor="@color/color26_yellow" />

                <CheckBox
                    android:id="@+id/bb12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="约克公爵"
                    android:textColor="@color/color26_yellow" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2">

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/yellow_coners_normal_btn"
            android:text="提交"
            android:textColor="@color/color1_white" />
    </LinearLayout>
</LinearLayout>
